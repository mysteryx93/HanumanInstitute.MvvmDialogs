<Window
    x:Class="Demo.OpenFolderDialog.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="https://github.com/mysteryx93/HanumanInstitute.MvvmDialogs"
    xmlns:local="clr-namespace:Demo.FolderBrowserDialog"
    mc:Ignorable="d"
    md:DialogServiceViews.IsRegistered="True"
    WindowStartupLocation="CenterScreen"
    Title="Demo - Folder Browser Dialog"
    Width="300"
    Height="200"
    d:DataContext="{x:Static local:App.MainWindow}">
    
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBox
            IsReadOnly="True"
            Text="{Binding Path, Mode=OneWay}" />
        <Button
            Grid.Column="1"
            Content="Browse..."
            Command="{Binding OpenFolderCommand}" />
    </Grid>
</Window>
